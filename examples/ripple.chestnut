parallel Int ripple(Point2d location, Size2d dimensions, Int current_time) {
  Real x_offset = location.x - dimensions.width/2;
  Real y_offset = location.y - dimensions.height/2;

  Real distance = sqrtf(x_offset * x_offset + y_offset * y_offset);

  Int shade = 128 + (127 * cos(distance/10 - current_time/7)) / (distance/10 + 1);

  return shade;
}

parallel Color orange_convert(Int value) {
  //return Color(red=value, green=value/2, blue=0, opacity=1);
  Color c;
  c.red = value;
  c.green = value / 2;
  c.blue = 0;
  c.opacity = 255;
  return c;
}

